<style>
  .special-offers {
    position: fixed;
    inset: 0;
    z-index: 2200;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    pointer-events: none;
    padding: 12px;
    box-sizing: border-box;
  }

  .special-offers__badge {
    pointer-events: all;
    position: relative;
    border: none;
    background: #8b1b1f;
    color: #fff;
    width: 52px;
    min-height: 220px;
    border-radius: 32px 0 0 32px;
    padding: 6px 0;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    writing-mode: vertical-rl;
    text-transform: uppercase;
    letter-spacing: 0.25em;
    font-size: 0.78rem;
    font-weight: 700;
    line-height: 1;
    box-shadow: -4px 4px 14px rgba(0, 0, 0, 0.25);
    transition: transform 0.3s ease;
  }

  .special-offers__badge span {
    display: inline-block;
    transform: rotate(180deg);
  }

  .special-offers__badge-close {
    position: absolute;
    top: 12px;
    right: 12px;
    font-size: 0.9rem;
    opacity: 0.7;
    font-weight: 800;
  }

  .special-offers__badge:hover {
    transform: translateX(-2px);
  }

  .special-offers__overlay {
    pointer-events: none;
    position: fixed;
    inset: 0;
    background: #fff;
    opacity: 0;
    transition: opacity 0.35s ease;
    z-index: 2185;
  }

  .special-offers__overlay--visible {
    pointer-events: all;
    opacity: 1;
  }

  .special-offers__panel {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    width: min(420px, 96vw);
    height: calc(100vh - 24px);
    box-sizing: border-box;
    transform: translateX(105%);
    background: #fff;
    color: #111;
    z-index: 2195;
    display: grid;
    grid-template-rows: auto 1fr;
    padding: 16px 16px 18px;
    gap: 10px;
    box-shadow: -12px 0 60px rgba(0, 0, 0, 0.35);
    transition: transform 0.35s cubic-bezier(0.19, 1, 0.22, 1);
    border-left: 1px solid rgba(0, 0, 0, 0.08);
    overflow: hidden;
    pointer-events: auto;
    overflow: visible;
  }

  .special-offers__panel--open {
    transform: translateX(0) !important;
  }

  .special-offers__panel-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 6px 2px 8px;
    gap: 10px;
    border-bottom: 1px solid rgba(0, 0, 0, 0.08);
  }

  .special-offers__panel-header h2 {
    margin: 0;
    font-size: 1.15rem;
    letter-spacing: 0.04em;
    font-weight: 700;
  }

  .special-offers__panel-eyebrow {
    margin: 0 0 2px;
    font-size: 0.72rem;
    letter-spacing: 0.32em;
    text-transform: uppercase;
    color: rgba(0, 0, 0, 0.55);
  }

  .special-offers__flyout-close {
    background: transparent;
    border: none;
    padding: 4px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: #14271a;
  }

  .special-offers__panel-close-floating {
    position: absolute;
    top: 12px;
    right: 12px;
    border: none;
    border-radius: 50%;
    width: 34px;
    height: 34px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    background: rgba(17, 17, 17, 0.06);
    color: #14271a;
    cursor: pointer;
    transition: background 0.2s ease, transform 0.2s ease;
  }

  .special-offers__panel-close-floating:hover {
    background: rgba(17, 17, 17, 0.12);
    transform: scale(1.03);
  }

  .special-offers__panel-body {
    display: flex;
    flex-direction: column;
    gap: 12px;
    flex: 1;
    overflow-y: auto;
    padding: 6px 8px 16px 4px;
    margin-right: 2px;
  }

  .special-offers__card {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 12px;
    align-items: center;
    padding: 12px 12px;
    border-radius: 12px;
    background: #f9f9f9;
    border: 1px solid rgba(0, 0, 0, 0.08);
    box-shadow: 0 3px 12px rgba(0, 0, 0, 0.07);
  }

  .special-offers__card-content {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .special-offers__card-title {
    margin: 0;
    font-weight: 700;
    font-size: 0.98rem;
  }

  .special-offers__card-subtitle {
    margin: 0;
    font-size: 0.8rem;
    color: rgba(0, 0, 0, 0.6);
  }

  .special-offers__card-cta {
    font-size: 0.76rem;
    padding: 8px 14px;
    border-radius: 999px;
    border: none;
    background: #0a3b1f;
    color: #fff;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    transition: background 0.25s ease;
  }

  .special-offers__card-cta:hover {
    background: #072913;
  }

  body.special-offers-open {
    overflow: hidden;
  }

  @media (max-width: 749px) {
    .special-offers {
      top: auto;
      bottom: 24px;
      right: 24px;
      transform: none;
    }

    .special-offers__badge {
      width: 50px;
      min-height: 200px;
    }

    .special-offers__panel {
      width: 100%;
      border-radius: 20px 0 0 20px;
    }
  }
</style>

<div class="special-offers" aria-live="polite">
  <button
    class="special-offers__badge"
    type="button"
    aria-expanded="false"
    aria-controls="special-offers-panel"
    data-special-offers-badge
  >
    <span aria-hidden="true">Special Offers For You</span>
    <span class="special-offers__badge-close">âœ•</span>
  </button>
  <div class="special-offers__overlay" data-special-offers-overlay aria-hidden="true"></div>
  <aside
    id="special-offers-panel"
    class="special-offers__panel"
    role="dialog"
    aria-modal="true"
    aria-hidden="true"
    aria-labelledby="special-offers-heading"
    data-special-offers-panel
  >
    <button
      type="button"
      class="special-offers__panel-close-floating"
      aria-label="Close special offers panel"
      data-special-offers-close
    >
      &times;
    </button>
    <header class="special-offers__panel-header">
      <div>
        <p class="special-offers__panel-eyebrow">Special Offers</p>
        <h2 id="special-offers-heading">Special Offers (4)</h2>
      </div>
      <button
        type="button"
        class="special-offers__flyout-close"
        aria-label="Close special offers panel"
        data-special-offers-close
      >
        {% render 'icon-close' %}
      </button>
    </header>
    <div class="special-offers__panel-body">
      <article class="special-offers__card">
        <div class="special-offers__card-content">
          <p class="special-offers__card-title">Winter New Launch Offer</p>
          <p class="special-offers__card-subtitle">Buy any 2 @ 599</p>
        </div>
        <a
          class="special-offers__card-cta"
          href="/collections/special-offers"
          aria-label="Shop Winter New Launch Offer"
        >
          Shop
        </a>
      </article>
      <article class="special-offers__card">
        <div class="special-offers__card-content">
          <p class="special-offers__card-title">Flat 7% Off First Order</p>
          <p class="special-offers__card-subtitle">+ Additional 25 OFF on Pre-paid Orders</p>
        </div>
        <a
          class="special-offers__card-cta"
          href="/collections/new-arrivals"
          aria-label="Shop Now Flat 7% Off First Order"
        >
          Shop Now
        </a>
      </article>
      <article class="special-offers__card">
        <div class="special-offers__card-content">
          <p class="special-offers__card-title">Buy any 2 Perfumes @ 1299</p>
          <p class="special-offers__card-subtitle">Launch Offer</p>
        </div>
        <a
          class="special-offers__card-cta"
          href="/collections/best-sellers"
          aria-label="Grab Now Buy any 2 Perfumes @ 1299"
        >
          Grab Now
        </a>
      </article>
      <article class="special-offers__card">
        <div class="special-offers__card-content">
          <p class="special-offers__card-title">Flat 20% OFF Combos</p>
          <p class="special-offers__card-subtitle">Limited Time Combo Deals</p>
        </div>
        <a
          class="special-offers__card-cta"
          href="/collections/combos-at-20-off"
          aria-label="Shop Flat 20% OFF Combos"
        >
          Shop
        </a>
      </article>
    </div>
  </aside>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    var badge = document.querySelector('[data-special-offers-badge]');
    var panel = document.querySelector('[data-special-offers-panel]');
    var overlay = document.querySelector('[data-special-offers-overlay]');
    if (!badge || !panel || !overlay) return;

    var togglePanel = function (open) {
      panel.classList.toggle('special-offers__panel--open', open);
      overlay.classList.toggle('special-offers__overlay--visible', open);
      badge.setAttribute('aria-expanded', open ? 'true' : 'false');
      panel.setAttribute('aria-hidden', open ? 'false' : 'true');
      overlay.setAttribute('aria-hidden', open ? 'false' : 'true');
      document.body.classList.toggle('special-offers-open', open);
    };

    var closePanel = function () {
      togglePanel(false);
    };

    badge.addEventListener('click', function () {
      togglePanel(true);
    });

    overlay.addEventListener('click', closePanel);

    document.querySelectorAll('[data-special-offers-close]').forEach(function (button) {
      button.addEventListener('click', function (event) {
        event.preventDefault();
        closePanel();
      });
    });

    document.addEventListener('keydown', function (event) {
      if (event.key === 'Escape' && panel.classList.contains('special-offers__panel--open')) {
        closePanel();
      }
    });
  });
</script>
