{%- style -%}
  .brand-assurance {
    background: #ffffff;
    padding: 26px 16px 32px;
  }
  .brand-assurance__inner {
    max-width: 1200px;
    margin: 0 auto;
  }
  .brand-assurance__grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 12px 18px;
    align-items: center;
    text-align: center;
  }
  .brand-assurance__item {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 10px;
    color: #0a9a5b;
  }
  .brand-assurance__icon { width: 68px; height: 68px; }
  .brand-assurance__logo { width: 68px; height: 68px; object-fit: contain; display: block; }
  .brand-assurance__label {
    font-weight: 700;
    font-size: 14px;
    color: #0b2f1b;
  }
  @media (max-width: 900px) {
    .brand-assurance__grid { grid-template-columns: repeat(3, 1fr); }
    .brand-assurance__icon { width: 56px; height: 56px; }
  }
  @media (max-width: 540px) {
    .brand-assurance__grid { grid-template-columns: repeat(2, 1fr); }
  }
{%- endstyle -%}

