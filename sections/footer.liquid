{% comment %} Simplified footer rebuilt to restore valid Liquid and schema {% endcomment %}
{{ 'section-footer.css' | asset_url | stylesheet_tag }}
{{ 'component-newsletter.css' | asset_url | stylesheet_tag }}
{{ 'component-list-menu.css' | asset_url | stylesheet_tag }}
{{ 'component-list-payment.css' | asset_url | stylesheet_tag }}
{{ 'component-list-social.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .footer-{{ section.id }} {
    margin-top: {{ section.settings.margin_top | default: 0 }}px;
    padding-top: {{ section.settings.padding_top | default: 36 }}px;
    padding-bottom: {{ section.settings.padding_bottom | default: 36 }}px;
  }
  .footer-{{ section.id }} .page-width {
    max-width: 1200px;
    margin: 0 auto;
    padding-left: 16px;
    padding-right: 16px;
  }
{%- endstyle -%}

{%- liquid
  assign enable_country_selector = section.settings.enable_country_selector
  assign enable_language_selector = section.settings.enable_language_selector
  assign show_localization = false
  if enable_country_selector or enable_language_selector
    assign show_localization = true
  endif
  assign show_newsletter = section.settings.newsletter_enable
  assign show_social = section.settings.show_social
  assign payment_enable = section.settings.payment_enable
  assign show_policy = section.settings.show_policy
  assign follow_on_shop_show = false
  if shop.features.follow_on_shop and section.settings.enable_follow_on_shop
    assign follow_on_shop_show = true
  endif
-%}

<footer class="footer color-{{ section.settings.color_scheme }} gradient footer-{{ section.id }}">
  <div class="page-width">
    <div class="footer__content-top">
      <div class="footer-block-list">
        {%- if show_newsletter -%}
          <div class="footer-block">
            {%- if section.settings.newsletter_heading != blank -%}
              <h2 class="footer-block__heading h3">{{ section.settings.newsletter_heading }}</h2>
            {%- endif -%}
            {%- form 'customer', id: 'ContactFooter', class: 'newsletter-form' -%}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="field">
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="field__input"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}aria-invalid="true" aria-describedby="ContactFooter-error"{% elsif form.posted_successfully? %}aria-describedby="ContactFooter-success"{% endif %}
                  placeholder="{{ 'newsletter.label' | t }}"
                  required
                >
                <label class="field__label" for="NewsletterForm--{{ section.id }}">{{ 'newsletter.label' | t }}</label>
                <button type="submit" class="newsletter-form__button field__button" name="commit" aria-label="{{ 'newsletter.button_label' | t }}">
                  {% render 'icon-arrow' %}
                </button>
              </div>
              {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="ContactFooter-error">
                  {% render 'icon-error' %}
                  {{ form.errors.translated_fields['email'] | capitalize }} {{ form.errors.messages['email'] }}
                </small>
              {%- endif -%}
              {%- if form.posted_successfully? -%}
                <small class="newsletter-form__message form__message" id="ContactFooter-success" tabindex="-1" autofocus>
                  {% render 'icon-success' %}
                  {{ 'newsletter.success' | t }}
                </small>
              {%- endif -%}
            {%- endform -%}
            {%- if follow_on_shop_show -%}
              <div class="footer__follow-on-shop">
                {{ shop | login_button: action: 'follow' }}
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}

        {%- for block in section.blocks -%}
          <div class="footer-block" {{ block.shopify_attributes }}>
            {%- case block.type -%}
              {%- when 'brand_information' -%}
                <h2 class="footer-block__heading h3">{{ shop.name }}</h2>
                <div class="footer-block__details">{{ shop.description }}</div>
                {%- if block.settings.show_social and show_social -%}
                  <div class="footer__social">
                    {%- render 'social-icons' -%}
                  </div>
                {%- endif -%}
              {%- when 'text' -%}
                {%- if block.settings.heading != blank -%}
                  <h2 class="footer-block__heading h3">{{ block.settings.heading }}</h2>
                {%- endif -%}
                <div class="footer-block__details rte">{{ block.settings.subtext }}</div>
              {%- when 'link_list' -%}
                {%- if block.settings.heading != blank -%}
                  <h2 class="footer-block__heading h3">{{ block.settings.heading }}</h2>
                {%- endif -%}
                {%- if block.settings.menu != blank -%}
                  <ul class="footer-block__details list-unstyled">
                    {%- for link in linklists[block.settings.menu].links -%}
                      <li><a href="{{ link.url }}" class="link link--text list-menu__item list-menu__item--link">{{ link.title }}</a></li>
                    {%- endfor -%}
                  </ul>
                {%- endif -%}
            {%- endcase -%}
          </div>
        {%- endfor -%}
      </div>
    </div>

    <div class="footer__content-bottom">
      <div class="footer__content-bottom-wrapper page-width{% if show_localization == false %} footer__content-bottom-wrapper--center{% endif %}">
        <div class="footer__copyright caption">
          <small class="copyright__content">&copy; {{ 'now' | date: '%Y' }}, {{ shop.name | link_to: routes.root_url }}</small>
          <small class="copyright__content">{{ powered_by_link }}</small>
          {%- if show_policy -%}
            {%- for policy in shop.policies -%}
              {%- if policy != blank -%}
                <small class="copyright__content"><a href="{{ policy.url }}">{{ policy.title }}</a></small>
              {%- endif -%}
            {%- endfor -%}
          {%- endif -%}
        </div>

        {%- if show_localization or payment_enable -%}
          <div class="footer__payment localization-form">
            {%- if show_localization -%}
              {%- form 'localization', id: 'FooterLocalizationForm' -%}
                <div class="localization-form__selects">
                  {%- if enable_country_selector and localization.available_countries.size > 1 -%}
                    <div class="localization-form__select">
                      <label class="visually-hidden" for="FooterCountry">{{ 'localization.country_label' | t }}</label>
                      <select name="country_code" id="FooterCountry">
                        {%- for country in localization.available_countries -%}
                          <option value="{{ country.iso_code }}" {%- if country.iso_code == localization.country.iso_code %} selected{% endif %}>
                            {{ country.name }} ({{ country.currency.iso_code }}{% if country.currency.symbol %} {{ country.currency.symbol }}{% endif %})
                          </option>
                        {%- endfor -%}
                      </select>
                    </div>
                  {%- endif -%}
                  {%- if enable_language_selector and localization.available_languages.size > 1 -%}
                    <div class="localization-form__select">
                      <label class="visually-hidden" for="FooterLanguage">{{ 'localization.language_label' | t }}</label>
                      <select name="language_code" id="FooterLanguage">
                        {%- for language in localization.available_languages -%}
                          <option value="{{ language.iso_code }}" {%- if language.iso_code == localization.language.iso_code %} selected{% endif %}>
                            {{ language.endonym_name | capitalize }}
                          </option>
                        {%- endfor -%}
                      </select>
                    </div>
                  {%- endif -%}
                </div>
              {%- endform -%}
            {%- endif -%}

            {%- if payment_enable and shop.enabled_payment_types.size > 0 -%}
              <div class="footer__payment-icons">
                <ul class="list list-payment" role="list">
                  {%- for type in shop.enabled_payment_types -%}
                    <li class="list-payment__item">{{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}</li>
                  {%- endfor -%}
                </ul>
              </div>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "tag": "footer",
  "class": "section-footer",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1",
      "options": [
        { "value": "background-1", "label": "Background 1" },
        { "value": "background-2", "label": "Background 2" },
        { "value": "inverse", "label": "Inverse" }
      ]
    },
    { "type": "checkbox", "id": "newsletter_enable", "label": "Enable newsletter", "default": true },
    { "type": "text", "id": "newsletter_heading", "label": "Newsletter heading", "default": "Subscribe to our emails" },
    { "type": "checkbox", "id": "enable_follow_on_shop", "label": "Enable Shop follow button", "default": true },
    { "type": "checkbox", "id": "show_social", "label": "Show social icons", "default": true },
    { "type": "checkbox", "id": "enable_country_selector", "label": "Enable country selector", "default": true },
    { "type": "checkbox", "id": "enable_language_selector", "label": "Enable language selector", "default": true },
    { "type": "checkbox", "id": "payment_enable", "label": "Show payment icons", "default": true },
    { "type": "checkbox", "id": "show_policy", "label": "Show policy links", "default": false },
    { "type": "range", "id": "margin_top", "label": "Section margin top", "min": 0, "max": 100, "step": 4, "unit": "px", "default": 0 },
    { "type": "range", "id": "padding_top", "label": "Padding top", "min": 0, "max": 100, "step": 4, "unit": "px", "default": 36 },
    { "type": "range", "id": "padding_bottom", "label": "Padding bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "default": 36 }
  ],
  "blocks": [
    {
      "type": "brand_information",
      "name": "Brand information",
      "limit": 1,
      "settings": [
        { "type": "checkbox", "id": "show_social", "label": "Show social icons", "default": true }
      ]
    },
    {
      "type": "link_list",
      "name": "Menu",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading" },
        { "type": "link_list", "id": "menu", "label": "Menu" }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading" },
        { "type": "richtext", "id": "subtext", "label": "Text" }
      ]
    }
  ],
  "default": {
    "blocks": [
      { "type": "link_list", "settings": { "heading": "Quick links" } },
      { "type": "brand_information" },
      { "type": "text", "settings": { "heading": "About us", "subtext": "<p>Share store details, promotions, or brand content with your customers.</p>" } }
    ]
  }
}
{% endschema %}
