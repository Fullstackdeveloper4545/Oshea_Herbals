{% liquid
  assign fb_url = section.settings.social_facebook | default: '#'
  assign ig_url = section.settings.social_instagram | default: '#'
  assign yt_url = section.settings.social_youtube | default: '#'
  assign terms_url = section.settings.terms_url | default: '#'
  assign privacy_url = section.settings.privacy_url | default: '#'
  assign current_year = 'now' | date: '%Y'
%}

<div id="footer-strip-{{ section.id }}" class="footer-strip">
  <div class="footer-strip__inner">
    <div class="footer-strip__copyright">&copy; {{ current_year }} Oshea Herbals. Powered by Shopify</div>
    <div class="footer-strip__right">
      <div class="footer-strip__icons">
        <a href="{{ fb_url }}" class="footer-strip__icon-link" aria-label="Facebook">
          <svg viewBox="0 0 24 24" role="presentation"><path d="M13 10h2.5l.5-3H13V5.5c0-.9.3-1.5 1.6-1.5H16V1.1C15.4 1 14.1 1 12.6 1 9.9 1 8 2.7 8 5.2V7H5v3h3v9h4v-9Z"/></svg>
        </a>
        <a href="{{ ig_url }}" class="footer-strip__icon-link" aria-label="Instagram">
          <svg viewBox="0 0 24 24" role="presentation"><path d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5Zm0 2a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h10a3 3 0 0 0 3-3V7a3 3 0 0 0-3-3H7Zm5 3.5A4.5 4.5 0 1 1 7.5 12 4.5 4.5 0 0 1 12 7.5Zm0 2A2.5 2.5 0 1 0 14.5 12 2.5 2.5 0 0 0 12 9.5Zm5.75-3.5a1.25 1.25 0 1 1-1.25 1.25 1.25 1.25 0 0 1 1.25-1.25Z"/></svg>
        </a>
        <a href="{{ yt_url }}" class="footer-strip__icon-link" aria-label="YouTube">
          <svg viewBox="0 0 24 24" role="presentation"><path d="M21.6 7.2s-.2-1.4-.8-2a2.8 2.8 0 0 0-2-.8C16.1 4.2 12 4.2 12 4.2h-.1s-4 0-6.8.2a2.8 2.8 0 0 0-2 .8c-.6.6-.8 2-.8 2S2 8.8 2 10.3v1.4c0 1.5.2 3 .2 3s.2 1.4.8 2a2.8 2.8 0 0 0 2 .8c1.4.1 6 .2 6 .2s4 0 6.8-.2a2.8 2.8 0 0 0 2-.8c.6-.6.8-2 .8-2s.2-1.5.2-3v-1.4c0-1.5-.2-3-.2-3ZM9.8 13.8V8.8l4.9 2.5-4.9 2.5Z"/></svg>
        </a>
      </div>
      <div class="footer-strip__links">
        <a class="footer-strip__link" href="{{ terms_url }}">Terms &amp; Conditions</a>
        <a class="footer-strip__link" href="{{ privacy_url }}">Privacy Policy</a>
      </div>
    </div>
  </div>
</div>

<style>
  #footer-strip-{{ section.id }} {
    background: #fff;
    padding: 16px 12px 18px;
  }
  #footer-strip-{{ section.id }} .footer-strip__inner {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
    flex-wrap: nowrap;
  }
  #footer-strip-{{ section.id }} .footer-strip__copyright {
    color: #111;
    font-size: 0.98rem;
    white-space: nowrap;
  }
  #footer-strip-{{ section.id }} .footer-strip__right {
    display: flex;
    align-items: center;
    gap: 18px;
    flex-wrap: nowrap;
    justify-content: flex-end;
    text-align: right;
  }
  #footer-strip-{{ section.id }} .footer-strip__icons {
    display: inline-flex;
    gap: 10px;
  }
  #footer-strip-{{ section.id }} .footer-strip__icon-link {
    width: 38px;
    height: 38px;
    border: 1px solid #d7d7d7;
    border-radius: 50%;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: #111;
    background: #fff;
    cursor: pointer;
    transition: background 140ms ease, color 140ms ease, border-color 140ms ease;
    text-decoration: none;
  }
  #footer-strip-{{ section.id }} .footer-strip__icon-link svg {
    width: 18px;
    height: 18px;
    fill: currentColor;
  }
  #footer-strip-{{ section.id }} .footer-strip__icon-link:hover {
    background: #f2f2f2;
    border-color: #c9c9c9;
    color: #000;
  }
  #footer-strip-{{ section.id }} .footer-strip__links {
    display: inline-flex;
    gap: 18px;
    align-items: center;
    justify-content: flex-end;
    margin-left: 12px;
    color: #111;
    white-space: nowrap;
  }
  #footer-strip-{{ section.id }} .footer-strip__link {
    color: #111;
    text-decoration: none;
    font-size: 0.98rem;
  }
  #footer-strip-{{ section.id }} .footer-strip__link:hover {
    text-decoration: underline;
    color: #000;
  }
  @media (max-width: 749px) {
    #footer-strip-{{ section.id }} {
      padding: 14px 10px 16px;
    }
    #footer-strip-{{ section.id }} .footer-strip__inner {
      flex-wrap: wrap;
      justify-content: center;
      text-align: center;
      gap: 12px;
    }
    #footer-strip-{{ section.id }} .footer-strip__right {
      flex-wrap: wrap;
      justify-content: center;
      gap: 12px;
    }
    #footer-strip-{{ section.id }} .footer-strip__icons {
      gap: 8px;
    }
    #footer-strip-{{ section.id }} .footer-strip__links {
      gap: 14px;
      flex-wrap: wrap;
      justify-content: center;
      margin-left: 0;
      white-space: normal;
    }
  }
</style>

{% schema %}
{
  "name": "Footer bottom strip",
  "tag": "section",
  "class": "footer-bottom-strip",
  "settings": [
    { "type": "url", "id": "social_facebook", "label": "Facebook URL" },
    { "type": "url", "id": "social_instagram", "label": "Instagram URL" },
    { "type": "url", "id": "social_youtube", "label": "YouTube URL" },
    { "type": "url", "id": "terms_url", "label": "Terms & Conditions URL" },
    { "type": "url", "id": "privacy_url", "label": "Privacy Policy URL" }
  ],
  "blocks": [],
  "presets": [
    { "name": "Footer bottom strip" }
  ]
}
{% endschema %}
