    color: #2f2f2f;
    text-decoration: none;
    font-size: 0.96rem;
  }
  #footer-main-{{ section.id }} .footer-main__link:hover {
    color: #0a6b3d;
    text-decoration: underline;
  }
  #footer-main-{{ section.id }} .footer-main__divider--lower {
    margin-top: 32px;
    margin-bottom: 18px;
  }
