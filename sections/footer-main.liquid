  }
  #footer-main-{{ section.id }} .footer-main__brand {
    display: grid;
    gap: 8px;
  }
  #footer-main-{{ section.id }} .footer-main__logo-wrap {
    display: inline-block;
    margin-bottom: 2px;
  }
  #footer-main-{{ section.id }} .footer-main__logo {
    max-width: 240px;
    height: auto;
  }
  #footer-main-{{ section.id }} .footer-main__description {
    margin: 0;
    color: #3d3d3d;
    line-height: 1.5;
    font-size: 0.95rem;
  }
  #footer-main-{{ section.id }} .footer-main__made-in-btn {
    display: inline-flex;
    align-items: center;
    gap: 6px;
    padding: 0;
    border: 0;
    background: none;
    color: #0a6b3d;
    font-weight: 600;
    font-size: 0.95rem;
    font-style: italic;
    text-decoration: none;
    box-shadow: none;
    margin-top: 4px;
  }
  #footer-main-{{ section.id }} .footer-main__made-in-btn:hover {
    color: #064729;
    text-decoration: underline;
  }
  #footer-main-{{ section.id }} .footer-main__links {
    grid-column: span 3;
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 32px;
  }
  #footer-main-{{ section.id }} .footer-main__heading {
    margin: 0 0 12px;
    font-size: 1.05rem;
    font-weight: 700;
  }
