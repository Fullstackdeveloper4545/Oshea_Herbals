    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    gap: 24px;
    align-items: start;
  }
  #footer-main-{{ section.id }} .footer-main__top-item {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 12px;
    align-items: center;
  }
  #footer-main-{{ section.id }} .footer-main__icon {
    width: 28px;
    height: 28px;
    border: 1px solid #d7d7d7;
    border-radius: 6px;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: #1b1b1b;
  }
  #footer-main-{{ section.id }} .footer-main__icon svg {
    width: 18px;
    height: 18px;
    fill: currentColor;
  }
  #footer-main-{{ section.id }} .footer-main__label {
    font-weight: 600;
    margin-bottom: 4px;
  }
  #footer-main-{{ section.id }} .footer-main__text {
    color: #3d3d3d;
    font-size: 0.95rem;
  }
