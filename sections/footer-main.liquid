    display: flex;
    align-items: center;
    justify-content: flex-end;
    flex-wrap: wrap;
    gap: 12px;
  }
  #footer-main-{{ section.id }} .footer-main__social-legal {
    display: flex;
    flex-direction: row;
    gap: 18px;
    align-items: center;
    text-align: right;
  }
  #footer-main-{{ section.id }} .footer-main__social {
    display: flex;
    gap: 10px;
    align-items: center;
  }
  #footer-main-{{ section.id }} .footer-main__social-link {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 1px solid #d7d7d7;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: #1b1b1b;
    background: #fff;
    text-decoration: none;
    transition: background 150ms ease, color 150ms ease, border-color 150ms ease;
  }
  #footer-main-{{ section.id }} .footer-main__social-link:hover {
    background: #0a6b3d;
    color: #fff;
    border-color: #0a6b3d;
  }
  #footer-main-{{ section.id }} .footer-main__social-link svg {
    width: 18px;
    height: 18px;
    fill: currentColor;
  }
  #footer-main-{{ section.id }} .footer-main__legal {
    display: flex;
    gap: 18px;
    align-items: center;
    justify-content: flex-end;
  }
  #footer-main-{{ section.id }} .footer-main__legal-link {
    color: #0a6b3d;
    text-decoration: none;
    font-size: 0.96rem;
    font-weight: 500;
  }
  #footer-main-{{ section.id }} .footer-main__legal-link:hover {
    text-decoration: underline;
  }
  @media (max-width: 989px) {
    #footer-main-{{ section.id }} .footer-main__top {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
    #footer-main-{{ section.id }} .footer-main__middle {
      grid-template-columns: repeat(2, minmax(0, 1fr));
    }
    #footer-main-{{ section.id }} .footer-main__links {
      grid-column: span 2;
    }
  }
  @media (max-width: 749px) {
    #footer-main-{{ section.id }} .footer-main__inner {
      padding: 36px 16px 24px;
      max-width: 100%;
      margin-left: auto;
      margin-right: auto;
    }
    #footer-main-{{ section.id }} .footer-main__top {
      grid-template-columns: 1fr;
    }
    #footer-main-{{ section.id }} .footer-main__middle {
      grid-template-columns: 1fr;
    }
    #footer-main-{{ section.id }} .footer-main__links {
      grid-template-columns: repeat(2, minmax(0, 1fr));
      grid-column: span 1;
    }
    #footer-main-{{ section.id }} .footer-main__bottom {
      flex-direction: column;
      align-items: flex-start;
      gap: 14px;
    }
    #footer-main-{{ section.id }} .footer-main__social-legal {
      flex-direction: column;
      align-items: flex-start;
      justify-items: flex-start;
      gap: 10px;
    }
    #footer-main-{{ section.id }} .footer-main__legal {
      justify-content: flex-start;
    }
  }
</style>

