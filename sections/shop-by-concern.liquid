{%- liquid
  assign block_count = section.blocks.size
-%}

<style>
  .sbc {
    padding: {{ section.settings.padding_top | default: 24 }}px 12px {{ section.settings.padding_bottom | default: 24 }}px;
    background: #fff;
  }
  .sbc__inner {
    max-width: 1300px;
    margin: 0 auto;
  }
  .sbc__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
    margin-bottom: 18px;
  }
  .sbc__title {
    margin: 0;
    font-size: 24px;
    font-weight: 800;
    color: #0b2f1b;
  }
  .sbc__link {
    font-size: 14px;
    font-weight: 700;
    color: #0b8c53;
    text-decoration: none;
  }
  .sbc__link:hover { text-decoration: underline; }
  .sbc__grid {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 18px;
  }
  .sbc__item {
    text-align: center;
    padding: 10px;
  }
  .sbc__image {
    width: 120px;
    height: 120px;
    margin: 0 auto 10px;
    border-radius: 50%;
    background: #f3f3f3;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    border: 1px solid #e7e7e7;
  }
  .sbc__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
    display: block;
  }
  .sbc__placeholder {
    width: 100%;
    height: 100%;
    background: #e7e7e7;
    border-radius: 50%;
  }
  .sbc__title-text {
    font-size: 14px;
    font-weight: 700;
    color: #0b2f1b;
    line-height: 1.4;
  }
  .sbc__link-wrap {
    color: inherit;
    text-decoration: none;
  }
  @media (max-width: 1100px) {
    .sbc__grid { grid-template-columns: repeat(4, 1fr); }
    .sbc__image { width: 110px; height: 110px; }
  }
  @media (max-width: 820px) {
    .sbc__grid { grid-template-columns: repeat(3, 1fr); }
    .sbc__image { width: 100px; height: 100px; }
  }
  @media (max-width: 600px) {
    .sbc__grid { grid-template-columns: repeat(2, 1fr); }
    .sbc__header { flex-direction: column; align-items: flex-start; }
  }
</style>

<section class="sbc" id="shop-by-concern-{{ section.id }}">
  <div class="sbc__inner">
    <div class="sbc__header">
      <h2 class="sbc__title">{{ section.settings.heading }}</h2>
      {%- if section.settings.shop_all_link != blank -%}
        <a class="sbc__link" href="{{ section.settings.shop_all_link }}">{{ section.settings.shop_all_text }}</a>
      {%- endif -%}
    </div>

    <div class="sbc__grid">
      {%- if block_count > 0 -%}
        {%- for block in section.blocks -%}
          <div class="sbc__item" {{ block.shopify_attributes }}>
            {%- if block.settings.link != blank -%}<a class="sbc__link-wrap" href="{{ block.settings.link }}">{%- endif -%}
            <div class="sbc__image">
              {%- if block.settings.image != blank -%}
                <img src="{{ block.settings.image | image_url: width: 260 }}" alt="{{ block.settings.title | escape }}">
              {%- else -%}
                <div class="sbc__placeholder"></div>
              {%- endif -%}
            </div>
            <div class="sbc__title-text">{{ block.settings.title | default: 'Concern' }}</div>
            {%- if block.settings.link != blank -%}</a>{%- endif -%}
          </div>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..15) -%}
          <div class="sbc__item">
            <div class="sbc__image"><div class="sbc__placeholder"></div></div>
            <div class="sbc__title-text">Concern</div>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Shop by concern",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Shop By Concern" },
    { "type": "text", "id": "shop_all_text", "label": "Shop all label", "default": "Shop All Products >" },
    { "type": "url", "id": "shop_all_link", "label": "Shop all link", "default": "/collections/all" },
    { "type": "range", "id": "padding_top", "label": "Padding top", "min": 0, "max": 100, "step": 4, "unit": "px", "default": 24 },
    { "type": "range", "id": "padding_bottom", "label": "Padding bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "default": 24 }
  ],
  "blocks": [
    {
      "type": "concern",
      "name": "Concern",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "title", "label": "Title", "default": "Concern" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "presets": [
    { "name": "Shop by concern" }
  ]
}
{% endschema %}
