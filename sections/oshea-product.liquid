{%- liquid
  assign gallery_media = product.media
  if gallery_media.size == 0
    assign gallery_media = product.featured_media | default: nil | split: ',' | compact
  endif
-%}

<style>
  .oshea-pdp {
    background: #fff;
    color: #0f2413;
  }
  .oshea-pdp .page-width {
    max-width: 1200px;
  }
  .oshea-pdp__top {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 36px;
    padding: 20px 0 12px;
  }
  .oshea-pdp__gallery {
    display: grid;
    grid-template-columns: 92px 1fr;
    gap: 16px;
    align-items: start;
  }
  .oshea-pdp__thumbs {
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .oshea-pdp__thumb {
    border: 1px solid #e5e5e5;
    border-radius: 12px;
    background: #fff;
    padding: 6px;
    cursor: pointer;
    transition: border-color 0.2s ease, box-shadow 0.2s ease;
  }
  .oshea-pdp__thumb img {
    display: block;
    width: 100%;
    height: 82px;
    object-fit: contain;
  }
  .oshea-pdp__thumb.is-active {
    border-color: #0f5c2e;
    box-shadow: 0 6px 18px rgba(0,0,0,0.08);
  }
  .oshea-pdp__main {
    border: 1px solid #ececec;
    border-radius: 18px;
    overflow: hidden;
    position: relative;
    background: linear-gradient(145deg, #fff7ec, #f5f9f2);
  }
  .oshea-pdp__main-frame {
    display: none;
  }
  .oshea-pdp__main-frame.is-active {
    display: block;
  }
  .oshea-pdp__main-frame img, .oshea-pdp__main-frame video, .oshea-pdp__main-frame model-viewer {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .oshea-pdp__info {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }
  .oshea-pdp__badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: #e8f7ec;
    color: #0f5c2e;
    padding: 6px 12px;
    border-radius: 999px;
    font-weight: 700;
    font-size: 0.82rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
  }
  .oshea-pdp__title {
    font-size: 28px;
    font-weight: 800;
    margin: 0;
    line-height: 1.2;
  }
  .oshea-pdp__type {
    color: #116837;
    font-weight: 700;
    text-decoration: none;
  }
  .oshea-pdp__rating {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    font-weight: 700;
  }
  .oshea-pdp__rating-stars {
    display: inline-flex;
    gap: 2px;
    color: #f8b902;
  }
  .oshea-pdp__price-wrap {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: 1.8rem;
    font-weight: 800;
    color: #0b260f;
  }
  .oshea-pdp__checklist {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    padding: 6px 0;
  }
  .oshea-pdp__chip {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 6px 12px;
    border: 1px solid #d7e8dc;
    border-radius: 10px;
    background: #f7fbf8;
    font-weight: 600;
  }
  .oshea-pdp__dot {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: #0f5c2e;
  }
  .oshea-pdp__stock {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    border: 1px solid #0f5c2e;
    border-radius: 14px;
    padding: 8px 12px;
    font-weight: 700;
    color: #0f5c2e;
  }
  .oshea-pdp__size-row {
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
  }
  .oshea-pdp__pill {
    border: 2px solid #0f5c2e;
    background: #0f5c2e;
    color: #fff;
    border-radius: 12px;
    padding: 10px 16px;
    font-weight: 800;
    cursor: pointer;
  }
  .oshea-pdp__pill[aria-pressed="false"] {
    background: #fff;
    color: #0f5c2e;
  }
  .oshea-pdp__cta {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    background: #0a3c20;
    color: #fff;
    border: none;
    border-radius: 999px;
    padding: 14px;
    font-size: 1rem;
    font-weight: 800;
    cursor: pointer;
    box-shadow: 0 10px 30px rgba(0,0,0,0.18);
  }
  .oshea-pdp__offer-card {
    border: 1px solid #e6d6d6;
    background: #f7efef;
    border-radius: 12px;
    padding: 12px 14px;
    display: grid;
    gap: 10px;
  }
  .oshea-pdp__offer-title {
    font-weight: 800;
    display: flex;
    align-items: center;
    gap: 10px;
  }
  .oshea-pdp__offer-input {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 10px;
  }
  .oshea-pdp__offer-input input {
    width: 100%;
    border: 1px solid #d9d9d9;
    border-radius: 10px;
    padding: 10px;
  }
  .oshea-pdp__offer-input button {
    background: #c89830;
    border: none;
    color: #fff;
    padding: 10px 14px;
    border-radius: 10px;
    font-weight: 800;
    cursor: pointer;
  }
  .oshea-pdp__usp-row {
    display: flex;
    gap: 14px;
    flex-wrap: wrap;
    align-items: center;
  }
  .oshea-pdp__usp {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 10px 14px;
    border-radius: 12px;
    background: #f4f9f5;
    border: 1px solid #e4efe7;
    font-weight: 700;
  }
  .oshea-pdp__banner {
    border: 1px solid #f4c8c8;
    background: #fdf0f0;
    border-radius: 12px;
    padding: 14px;
    font-weight: 700;
    color: #a13a3a;
  }
  .oshea-pdp__banner--success {
    background: #eaf7ef;
    border-color: #c8e6cf;
    color: #0f5c2e;
  }
  .oshea-pdp__share {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .oshea-pdp__share button {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 1px solid #d9d9d9;
    background: #fff;
    cursor: pointer;
  }
  .oshea-pdp__accordion {
    border-top: 1px solid #d9d9d9;
  }
  .oshea-pdp__accordion details {
    border-bottom: 1px solid #d9d9d9;
    padding: 14px 0;
  }
  .oshea-pdp__accordion summary {
    display: flex;
    justify-content: space-between;
    align-items: center;
    cursor: pointer;
    font-weight: 800;
  }
  .oshea-pdp__accordion p {
    margin: 8px 0 0;
    color: #3a3a3a;
  }
  .oshea-pdp__why {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 28px;
    align-items: center;
    padding: 60px 0 40px;
  }
  .oshea-pdp__why img {
    width: 100%;
    border-radius: 18px;
    object-fit: cover;
  }
  .oshea-pdp__list {
    display: grid;
    grid-template-columns: repeat(2, minmax(0, 1fr));
    gap: 16px 24px;
  }
  .oshea-pdp__list-item {
    display: grid;
    grid-template-columns: auto 1fr;
    gap: 10px;
    align-items: start;
  }
  .oshea-pdp__ingredients {
    padding: 20px 0 40px;
  }
  .oshea-card-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 16px;
  }
  .oshea-card {
    background: #e8f7ec;
    border-radius: 18px;
    padding: 18px 16px;
    text-align: center;
    border: 1px solid #d7eadc;
  }
  .oshea-card img {
    width: 62px;
    height: 62px;
    object-fit: contain;
    margin-bottom: 10px;
  }
  .oshea-card h4 {
    margin: 0 0 6px;
    font-size: 1.05rem;
  }
  .oshea-card p {
    margin: 0;
    color: #2c402f;
  }
  .oshea-pdp__how {
    padding: 20px 0 40px;
  }
  .oshea-step-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 16px;
  }
  .oshea-step {
    text-align: center;
  }
  .oshea-step img {
    width: 100%;
    border-radius: 12px;
    object-fit: cover;
  }
  .oshea-step strong {
    display: block;
    margin-top: 6px;
  }
  .oshea-pdp__assurance {
    background: #e3f7e9;
    border-radius: 18px;
    padding: 18px;
    display: grid;
    gap: 14px;
    justify-items: center;
    margin-bottom: 30px;
  }
  .oshea-pdp__assurance-row {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
    justify-content: center;
  }
  .oshea-pill {
    border: 1px solid #c8e6cf;
    background: #fff;
    border-radius: 999px;
    padding: 8px 12px;
    font-weight: 700;
  }
  .oshea-hero {
    position: relative;
    border-radius: 22px;
    overflow: hidden;
    margin: 10px 0 30px;
  }
  .oshea-hero img {
    width: 100%;
    display: block;
    object-fit: cover;
  }
  .oshea-hero__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(90deg, rgba(0,0,0,0.58), rgba(0,0,0,0.1));
  }
  .oshea-hero__content {
    position: absolute;
    inset: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    gap: 10px;
    color: #fff;
    text-align: center;
    padding: 18px;
  }
  .oshea-hero__cta {
    background: #fff;
    color: #0f2413;
    border: none;
    padding: 10px 16px;
    border-radius: 999px;
    font-weight: 800;
    cursor: pointer;
  }
  .oshea-slider {
    position: relative;
  }
  .oshea-slider__track {
    display: grid;
    grid-auto-flow: column;
    grid-auto-columns: minmax(220px, 1fr);
    gap: 14px;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    padding: 4px;
  }
  .oshea-slider__item {
    border: 1px solid #e5e5e5;
    border-radius: 14px;
    overflow: hidden;
    background: #fff;
    scroll-snap-align: start;
  }
  .oshea-slider__item img {
    width: 100%;
    height: 180px;
    object-fit: cover;
  }
  .oshea-slider__info {
    padding: 10px;
  }
  .oshea-slider__title {
    font-weight: 700;
    margin: 0 0 4px;
    font-size: 0.95rem;
  }
  .oshea-slider__price {
    font-weight: 800;
    color: #0a3c20;
  }
  .oshea-slider__nav {
    position: absolute;
    top: 50%;
    right: 10px;
    display: flex;
    gap: 6px;
    transform: translateY(-50%);
  }
  .oshea-slider__btn {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 1px solid #d9d9d9;
    background: #fff;
    cursor: pointer;
    font-weight: 800;
  }
  @media (max-width: 980px) {
    .oshea-pdp__top {
      grid-template-columns: 1fr;
    }
    .oshea-pdp__gallery {
      grid-template-columns: 1fr;
    }
    .oshea-pdp__thumbs {
      flex-direction: row;
      justify-content: center;
      flex-wrap: wrap;
    }
    .oshea-pdp__top {
      gap: 18px;
    }
  }
  @media (max-width: 640px) {
    .oshea-pdp__title { font-size: 22px; }
    .oshea-pdp__why { grid-template-columns: 1fr; }
  }
</style>

{%- assign checklist_items = section.settings.checklist | default: '' | replace: '\r', '' | split: '\n' -%}
{%- assign usp_items = section.settings.usp_list | default: '' | replace: '\r', '' | split: '\n' -%}
{%- assign why_items = section.settings.why_list | default: '' | replace: '\r', '' | split: '\n' -%}
{%- assign assurance_items = section.settings.assurance_pills | default: '' | replace: '\r', '' | split: '\n' -%}

<section id="OsheaPdp-{{ section.id }}" class="oshea-pdp">
  <div class="page-width oshea-pdp__top">
    <div class="oshea-pdp__gallery">
      <div class="oshea-pdp__thumbs">
        {%- for media in gallery_media -%}
          <button class="oshea-pdp__thumb {% if forloop.first %}is-active{% endif %}" type="button" data-index="{{ forloop.index0 }}" aria-label="Show media {{ forloop.index }}">
            {%- if media.preview_image != blank -%}
              {{ media.preview_image | image_url: width: 160 | image_tag: loading: 'lazy', widths: '160,240', alt: media.alt | escape }}
            {%- endif -%}
          </button>
        {%- endfor -%}
      </div>
      <div class="oshea-pdp__main" data-main-gallery>
        {%- for media in gallery_media -%}
          <div class="oshea-pdp__main-frame {% if forloop.first %}is-active{% endif %}" data-index="{{ forloop.index0 }}">
            {%- if media.media_type == 'video' -%}
              {{ media | video_tag: controls: true, width: 900 }}
            {%- elsif media.media_type == 'external_video' -%}
              {{ media | external_video_tag: width: 900 }}
            {%- elsif media.media_type == 'model' -%}
              {{ media | model_viewer_tag: image_size: '900x', reveal: 'interaction', loading: 'lazy' }}
            {%- else -%}
              {{ media | image_url: width: 1200 | image_tag: loading: 'lazy', alt: media.alt | escape }}
            {%- endif -%}
          </div>
        {%- endfor -%}
      </div>
    </div>

    <div class="oshea-pdp__info">
      <span class="oshea-pdp__badge">{{ section.settings.badge_label }}</span>
      <h1 class="oshea-pdp__title">{{ product.title | escape }}</h1>
      {%- if product.type != blank -%}
        <a href="/collections/all/{{ product.type | handleize }}" class="oshea-pdp__type">{{ product.type }}</a>
      {%- endif -%}
      <div class="oshea-pdp__rating">
        <span class="oshea-pdp__rating-stars">&#9733;&#9733;&#9733;&#9733;&#9733;</span>
        <span>{{ 'No reviews' }}</span>
      </div>
      <div class="oshea-pdp__price-wrap">
        {%- render 'price', product: product, use_variant: true, show_badges: true, price_class: '' -%}
      </div>
      <div class="oshea-pdp__checklist">
        {%- for item in checklist_items -%}
          {%- if item != blank -%}
            <span class="oshea-pdp__chip"><span class="oshea-pdp__dot"></span>{{ item }}</span>
          {%- endif -%}
        {%- endfor -%}
      </div>

      <div class="oshea-pdp__stock">
        <span>{{ section.settings.stock_label }}</span>
        <span>{{ product.selected_or_first_available_variant.inventory_quantity | default: 0 }}</span>
      </div>

      <div class="oshea-pdp__size-row">
        {%- assign variants = product.variants -%}
        {%- if variants.size > 1 -%}
          {%- for variant in variants -%}
            <button class="oshea-pdp__pill" type="button" data-variant="{{ variant.id }}" aria-pressed="{% if forloop.first %}true{% else %}false{% endif %}">{{ variant.title }}</button>
          {%- endfor -%}
        {%- else -%}
          <span class="oshea-pdp__pill" aria-pressed="true">{{ variants.first.title }}</span>
        {%- endif -%}
      </div>

      {%- assign product_form_id = 'oshea-product-form-' | append: section.id -%}
      <div>
        {%- render 'buy-buttons',
          block: nil,
          product: product,
          product_form_id: product_form_id,
          section_id: section.id,
          show_pickup_availability: false
        -%}
      </div>

      <div class="oshea-pdp__offer-card">
        <div class="oshea-pdp__offer-title">
          <span>{{ section.settings.offer_heading }}</span>
          <span style="color:#c89830;font-weight:800;">{{ section.settings.offer_badge }}</span>
        </div>
        <div class="oshea-pdp__offer-input">
          <input type="tel" placeholder="Mobile number">
          <button type="button">{{ section.settings.offer_cta }}</button>
        </div>
      </div>

      <div class="oshea-pdp__usp-row">
        {%- for usp in usp_items -%}
          {%- if usp != blank -%}
            <span class="oshea-pdp__usp">{{ usp }}</span>
          {%- endif -%}
        {%- endfor -%}
      </div>

      {%- if section.settings.offer_box_text != blank -%}
        <div class="oshea-pdp__banner">{{ section.settings.offer_box_text }}</div>
      {%- endif -%}
      {%- if section.settings.offer_box_success != blank -%}
        <div class="oshea-pdp__banner oshea-pdp__banner--success">{{ section.settings.offer_box_success }}</div>
      {%- endif -%}

      <div class="oshea-pdp__share">
        <span>Share:</span>
        <button type="button" aria-label="Share on Facebook">f</button>
        <button type="button" aria-label="Share on WhatsApp">WA</button>
        <button type="button" aria-label="Share on Pinterest">P</button>
      </div>
    </div>
  </div>

  <div class="page-width">
    <div class="oshea-pdp__accordion">
      {%- for block in section.blocks -%}
        {%- if block.type == 'accordion' -%}
          <details {{ block.shopify_attributes }}>
            <summary>{{ block.settings.title }}</summary>
            <div>
              <p>{{ block.settings.content }}</p>
            </div>
          </details>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>

  <div class="page-width oshea-pdp__why">
    <div>
      {%- if section.settings.why_image != blank -%}
        {{ section.settings.why_image | image_url: width: 640 | image_tag: loading: 'lazy', class: 'oshea-pdp__why-img', alt: section.settings.why_heading }}
      {%- endif -%}
    </div>
    <div>
      <h2>{{ section.settings.why_heading }}</h2>
      <div class="oshea-pdp__list">
        {%- for item in why_items -%}
          {%- if item != blank -%}
            {%- assign parts = item | split: '|' -%}
            <div class="oshea-pdp__list-item">
              <div class="oshea-pdp__dot"></div>
              <div>
                <strong>{{ parts[0] }}</strong>
                <div>{{ parts[1] }}</div>
              </div>
            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>

  <div class="page-width oshea-pdp__ingredients">
    <h2 style="text-align:center;margin:0 0 16px;">{{ section.settings.ingredients_heading }}</h2>
    <div class="oshea-card-grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'ingredient' -%}
          <div class="oshea-card" {{ block.shopify_attributes }}>
            {%- if block.settings.image != blank -%}
              {{ block.settings.image | image_url: width: 200 | image_tag: loading: 'lazy', alt: block.settings.title }}
            {%- endif -%}
            <h4>{{ block.settings.title }}</h4>
            <p>{{ block.settings.text }}</p>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>

  <div class="page-width oshea-pdp__how">
    <h2 style="text-align:center;margin:0 0 16px;">{{ section.settings.how_heading }}</h2>
    <div class="oshea-step-grid">
      {%- for block in section.blocks -%}
        {%- if block.type == 'how' -%}
          <div class="oshea-step" {{ block.shopify_attributes }}>
            {%- if block.settings.image != blank -%}
              {{ block.settings.image | image_url: width: 360 | image_tag: loading: 'lazy', alt: block.settings.title }}
            {%- endif -%}
            <strong>{{ forloop.index }}. {{ block.settings.title }}</strong>
            <span>{{ block.settings.text }}</span>
          </div>
        {%- endif -%}
      {%- endfor -%}
    </div>
  </div>

  <div class="page-width">
    <div class="oshea-pdp__assurance">
      <h2 style="margin:0;">{{ section.settings.assurance_heading }}</h2>
      <div class="oshea-pdp__assurance-row">
        {%- for pill in assurance_items -%}
          {%- if pill != blank -%}
            <span class="oshea-pill">{{ pill }}</span>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
    {%- if section.settings.hero_image != blank -%}
      <div class="oshea-hero">
        {{ section.settings.hero_image | image_url: width: 1400 | image_tag: loading: 'lazy', alt: section.settings.hero_heading }}
        <div class="oshea-hero__overlay"></div>
        <div class="oshea-hero__content">
          <small>{{ section.settings.hero_eyebrow }}</small>
          <h3 style="margin:0;">{{ section.settings.hero_heading }}</h3>
          <button class="oshea-hero__cta" type="button">{{ section.settings.hero_cta }}</button>
        </div>
      </div>
    {%- endif -%}
  </div>

  <div class="page-width">
    <h2 style="text-align:center;">{{ section.settings.reco_heading }}</h2>
    <product-recommendations class="oshea-slider" data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ product.id }}&limit=8">
      <div class="oshea-slider__track" data-reco-track>
        {%- for recommendation in recommendations.products -%}
          <a class="oshea-slider__item" href="{{ recommendation.url }}">
            {%- if recommendation.featured_image -%}
              {{ recommendation.featured_image | image_url: width: 420 | image_tag: loading: 'lazy', alt: recommendation.title }}
            {%- endif -%}
            <div class="oshea-slider__info">
              <p class="oshea-slider__title">{{ recommendation.title }}</p>
              <div class="oshea-slider__price">
                {%- render 'price', product: recommendation, price_class: '' -%}
              </div>
            </div>
          </a>
        {%- endfor -%}
      </div>
      <div class="oshea-slider__nav">
        <button class="oshea-slider__btn" type="button" data-reco-prev aria-label="Previous">&#8592;</button>
        <button class="oshea-slider__btn" type="button" data-reco-next aria-label="Next">&#8594;</button>
      </div>
    </product-recommendations>
  </div>
</section>

<script>
  (() => {
    const root = document.getElementById('OsheaPdp-{{ section.id }}');
    if (!root) return;

    // Gallery switcher
    const thumbs = root.querySelectorAll('.oshea-pdp__thumb');
    const frames = root.querySelectorAll('.oshea-pdp__main-frame');
    thumbs.forEach((btn) => {
      btn.addEventListener('click', () => {
        const idx = btn.dataset.index;
        thumbs.forEach((b) => b.classList.toggle('is-active', b === btn));
        frames.forEach((f) => f.classList.toggle('is-active', f.dataset.index === idx));
      });
    });

    // Variant pill selection
    const pills = root.querySelectorAll('.oshea-pdp__pill[data-variant]');
    const formInput = root.querySelector('form[action*="/cart/add"] input[name="id"]');
    pills.forEach((pill) => {
      pill.addEventListener('click', () => {
        pills.forEach((p) => p.setAttribute('aria-pressed', 'false'));
        pill.setAttribute('aria-pressed', 'true');
        if (formInput) formInput.value = pill.dataset.variant;
      });
    });

    // Recommendations slider
    const track = root.querySelector('[data-reco-track]');
    const prev = root.querySelector('[data-reco-prev]');
    const next = root.querySelector('[data-reco-next]');
    if (track && prev && next) {
      const scrollByAmount = () => {
        const first = track.querySelector('.oshea-slider__item');
        return first ? first.getBoundingClientRect().width + 14 : 240;
      };
      prev.addEventListener('click', () => track.scrollBy({ left: -scrollByAmount(), behavior: 'smooth' }));
      next.addEventListener('click', () => track.scrollBy({ left: scrollByAmount(), behavior: 'smooth' }));
    }
  })();
</script>

