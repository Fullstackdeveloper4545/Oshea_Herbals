{%- liquid
  assign block_count = section.blocks.size
-%}

<style>
  .crs {
    padding: {{ section.settings.padding_top | default: 24 }}px 12px {{ section.settings.padding_bottom | default: 24 }}px;
    background: #fff;
    text-align: center;
  }
  .crs__inner {
    max-width: 1300px;
    margin: 0 auto;
  }
  .crs__header {
    margin-bottom: 18px;
  }
  .crs__title {
    margin: 0;
    font-size: 26px;
    font-weight: 800;
    color: #0b2f1b;
  }
  .crs__stars {
    margin: 8px 0 4px;
    color: #f5a524;
    font-size: 18px;
    letter-spacing: 2px;
  }
  .crs__count {
    margin: 0;
    color: #4d5b51;
    font-size: 14px;
  }
  .crs__slider {
    position: relative;
    padding: 0 48px;
  }
  .crs__viewport {
    overflow: hidden;
  }
  .crs__track {
    display: flex;
    gap: 14px;
    transition: transform 260ms ease;
    will-change: transform;
  }
  .crs__card {
    flex: 0 0 auto;
    width: 320px;
    border: 1px solid #e6e6e6;
    border-radius: 16px;
    background: #fff;
    padding: 16px 16px 14px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.05);
    text-align: left;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }
  .crs__card-stars {
    color: #f5a524;
    font-size: 16px;
    letter-spacing: 2px;
  }
  .crs__card-title {
    margin: 0;
    font-size: 16px;
    font-weight: 800;
    color: #0b2f1b;
  }
  .crs__card-text {
    margin: 0;
    font-size: 14px;
    color: #4d5b51;
    line-height: 1.5;
  }
  .crs__author {
    font-size: 13px;
    font-weight: 700;
    color: #0b2f1b;
  }
  .crs__product {
    width: 80px;
    height: 80px;
    border-radius: 12px;
    background: #f3f3f3;
    overflow: hidden;
    border: 1px solid #e7e7e7;
  }
  .crs__product img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  .crs__placeholder {
    width: 100%;
    height: 100%;
    background: #e7e7e7;
  }
  .crs__controls {
    position: absolute;
    top: 50%;
    left: 0;
    right: 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    pointer-events: none;
    transform: translateY(-50%);
  }
  .crs__arrow {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    border: 1px solid #dcdcdc;
    background: #fff;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: border-color 150ms ease, box-shadow 150ms ease, background-color 150ms ease, color 150ms ease, opacity 150ms ease;
  }
  .crs__arrow:hover:not([disabled]) {
    border-color: #0b8c53;
    color: #0b8c53;
    background-color: #e9f6ef;
    box-shadow: 0 6px 12px rgba(0,0,0,0.08);
  }
  .crs__arrow[disabled] {
    opacity: 0.4;
    cursor: not-allowed;
  }
  .crs__arrow:focus-visible {
    outline: 2px solid #0b8c53;
    outline-offset: 2px;
  }
  .crs__controls button { pointer-events: auto; }
  @media (max-width: 1024px) {
    .crs__card { width: 300px; }
  }
  @media (max-width: 820px) {
    .crs__card { width: 260px; }
  }
  @media (max-width: 600px) {
    .crs__card { width: 240px; }
  }
</style>

<section class="crs" id="customer-reviews-{{ section.id }}">
  <div class="crs__inner">
    <div class="crs__header">
      <h2 class="crs__title">{{ section.settings.heading }}</h2>
      <div class="crs__stars">
        {%- assign header_rating = section.settings.header_stars | default: 5 -%}
        {%- for i in (1..header_rating) -%}★{%- endfor -%}
      </div>
      <p class="crs__count">{{ section.settings.review_count_text }}</p>
    </div>

    <div class="crs__slider">
      <div class="crs__viewport">
        <div class="crs__track">
          {%- if block_count > 0 -%}
            {%- for block in section.blocks -%}
              <div class="crs__card" {{ block.shopify_attributes }}>
                <div class="crs__card-stars">
                  {%- assign stars = block.settings.stars | default: 5 -%}
                  {%- for i in (1..stars) -%}★{%- endfor -%}
                </div>
                <h3 class="crs__card-title">{{ block.settings.title | default: 'Review title' }}</h3>
                <p class="crs__card-text">{{ block.settings.review_text | default: 'Review text goes here.' }}</p>
                <span class="crs__author">{{ block.settings.author | default: 'Customer name' }}</span>
                <div class="crs__product">
                  {%- if block.settings.image != blank -%}
                    <img src="{{ block.settings.image | image_url: width: 300 }}" alt="{{ block.settings.title | escape }}">
                  {%- else -%}
                    <div class="crs__placeholder"></div>
                  {%- endif -%}
                </div>
              </div>
            {%- endfor -%}
          {%- else -%}
            {%- for i in (1..6) -%}
              <div class="crs__card">
                <div class="crs__card-stars">★★★★★</div>
                <h3 class="crs__card-title">Review title</h3>
                <p class="crs__card-text">Review text goes here.</p>
                <span class="crs__author">Customer name</span>
                <div class="crs__product"><div class="crs__placeholder"></div></div>
              </div>
            {%- endfor -%}
          {%- endif -%}
        </div>
      </div>
      <div class="crs__controls">
        <button class="crs__arrow prev" type="button" aria-label="Previous">&#8592;</button>
        <button class="crs__arrow next" type="button" aria-label="Next">&#8594;</button>
      </div>
    </div>
  </div>
</section>

<script>
  (() => {
    const root = document.getElementById('customer-reviews-{{ section.id }}');
    if (!root) return;
    const track = root.querySelector('.crs__track');
    const prevBtn = root.querySelector('.crs__arrow.prev');
    const nextBtn = root.querySelector('.crs__arrow.next');
    const items = () => Array.from(track.children);
    let index = 0;

    function perView() {
      const w = window.innerWidth;
      if (w >= 1200) return 3;
      if (w >= 820) return 2;
      return 1;
    }

    function clamp() {
      const total = items().length;
      const max = Math.max(0, Math.ceil(total - perView()));
      index = Math.max(0, Math.min(index, max));
      prevBtn.disabled = index <= 0;
      nextBtn.disabled = index >= max;
    }

    function update() {
      const list = items();
      if (list.length === 0) return;
      const cardWidth = list[0].getBoundingClientRect().width + 14; // gap
      clamp();
      track.style.transform = `translateX(${-index * cardWidth}px)`;
    }

    prevBtn.addEventListener('click', () => { index -= 1; update(); });
    nextBtn.addEventListener('click', () => { index += 1; update(); });
    window.addEventListener('resize', update);

    // Touch swipe
    let startX = 0;
    let deltaX = 0;
    let isDown = false;
    root.addEventListener('touchstart', (e) => {
      const t = e.touches[0];
      startX = t.clientX;
      isDown = true;
      deltaX = 0;
    });
    root.addEventListener('touchmove', (e) => {
      if (!isDown) return;
      deltaX = e.touches[0].clientX - startX;
    });
    root.addEventListener('touchend', () => {
      if (!isDown) return;
      const threshold = 40;
      if (deltaX < -threshold) index += 1;
      if (deltaX > threshold) index -= 1;
      update();
      isDown = false;
    });

    update();
  })();
</script>

