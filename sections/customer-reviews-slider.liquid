  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        { "type": "text", "id": "title", "label": "Title", "default": "Very moisturizing and gentle" },
        { "type": "textarea", "id": "review_text", "label": "Review text", "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vestibulum a ullamcorper justo." },
