<script>
  (function(){
    var root = document.documentElement;
    var header = document.querySelector('.custom-header');
    var toggle = document.querySelector('.nav-toggle');
    var siteNav = document.getElementById('siteNav');

    if(toggle){
      toggle.addEventListener('click', function(){
        var expanded = this.getAttribute('aria-expanded') === 'true';
        this.setAttribute('aria-expanded', !expanded);
        document.body.classList.toggle('nav-open');
      });
    }

    // Mega menu - scoped category panel switching (per has-mega)
    var megaMenus = document.querySelectorAll('.has-mega');
    megaMenus.forEach(function(menu){
      var btns = menu.querySelectorAll('.mega-cat-btn');
      var panels = menu.querySelectorAll('.mega-panel');
      if(!btns.length || !panels.length) return;

      // ensure first panel active
      btns.forEach(function(b){ b.classList.remove('active'); });
      panels.forEach(function(p){ p.classList.remove('active'); });
      btns[0].classList.add('active');
      panels[0].classList.add('active');

      btns.forEach(function(btn){
        btn.addEventListener('click', function(e){
          var catId = this.getAttribute('data-cat');
          btns.forEach(function(b){ b.classList.remove('active'); });
          this.classList.add('active');
          panels.forEach(function(p){
            p.classList.remove('active');
            if(p.getAttribute('data-cat') === catId) p.classList.add('active');
          });
        });

        btn.addEventListener('mouseenter', function(){
          var catId = this.getAttribute('data-cat');
          btns.forEach(function(b){ b.classList.remove('active'); });
          this.classList.add('active');
          panels.forEach(function(p){
            p.classList.remove('active');
            if(p.getAttribute('data-cat') === catId) p.classList.add('active');
          });
        });
      });
    });

    // Category dropdown for search - open/close + selection
    (function(){
      var catWrap = document.querySelector('.search-cat-wrap');
      var catBtn = catWrap && catWrap.querySelector('.search-cat');
      var catMenu = catWrap && catWrap.querySelector('.search-cat-menu');
      var options = catMenu && catMenu.querySelectorAll('li[role="option"]');

      function closeCatMenu(){
        if(!catBtn || !catMenu) return;
        catMenu.classList.remove('open');
        catMenu.setAttribute('aria-hidden','true');
        catBtn.setAttribute('aria-expanded','false');
      }

      function openCatMenu(){
        if(!catBtn || !catMenu) return;
        catMenu.classList.add('open');
        catMenu.setAttribute('aria-hidden','false');
        catBtn.setAttribute('aria-expanded','true');
      }

      if(catBtn && catMenu){
        catBtn.addEventListener('click', function(e){
          var isOpen = catMenu.classList.contains('open');
          if(isOpen) closeCatMenu(); else openCatMenu();
        });

        options.forEach(function(opt){
          opt.addEventListener('click', function(){
            options.forEach(function(o){ o.classList.remove('selected'); });
            this.classList.add('selected');
            // update button label
            catBtn.firstChild.nodeValue = this.textContent.trim();
            closeCatMenu();
          });
        });

        // close on outside click
        document.addEventListener('click', function(e){
          if(!catWrap.contains(e.target)) closeCatMenu();
        });

        // keyboard: close on ESC
        document.addEventListener('keydown', function(e){ if(e.key === 'Escape') closeCatMenu(); });
      }
    })();

    // Track order modal
    (function(){
      var openBtn = document.querySelector('[data-track-open]');
      var overlay = document.querySelector('[data-track-overlay]');
      var closeBtn = overlay && overlay.querySelector('[data-track-close]');

      function openModal(){
        if(!overlay) return;
        overlay.classList.add('is-open');
        overlay.setAttribute('aria-hidden','false');
        document.body.style.overflow = 'hidden';
      }

      function closeModal(){
        if(!overlay) return;
        overlay.classList.remove('is-open');
        overlay.setAttribute('aria-hidden','true');
        document.body.style.overflow = '';
      }

      if(openBtn && overlay){
        openBtn.addEventListener('click', function(e){
          e.preventDefault();
          openModal();
        });
      }

      if(closeBtn){
        closeBtn.addEventListener('click', closeModal);
      }

      if(overlay){
        overlay.addEventListener('click', function(e){
          if(e.target === overlay) closeModal();
        });
      }

      document.addEventListener('keydown', function(e){
        if(e.key === 'Escape') closeModal();
      });
    })();
  })();
</script>

