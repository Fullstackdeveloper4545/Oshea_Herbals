{%- style -%}
  .custom-header {
    width: 100%;
    background: #fff;
    box-shadow: 0 2px 6px rgba(0,0,0,0.06);
    position: sticky;
    top: 0;
    z-index: 1200;
    font-family: inherit;
  }

  .custom-header__inner { max-width: 1400px; margin: 0 auto; padding: 6px 12px; display:flex; flex-direction:column; }

  /* Top row */
  .custom-header__top { display:flex; align-items:center; justify-content:flex-start; gap:12px; flex-wrap:wrap; }

  .custom-header__logo img { height:44px; width:auto; display:block; }

  .custom-header__search { flex:1 1 auto; display:flex; justify-content:center; margin:0 12px; }
  .search-box {
    width:100%;
    max-width:none;
    margin:0 auto;
    display:flex;
    align-items:center;
    background:#f5f5f5;
    border-radius:28px;
    padding:6px 8px;
    min-height:44px;
    box-shadow:none !important;
    border:1px solid #e2e2e2;
  }

  .search-cat { background:transparent; border:0; padding:8px 12px; border-radius:20px; margin-right:8px; display:flex; align-items:center; color:var(--color-base-accent-1, #334FB4); font-weight:600; cursor:pointer; }

  /* Category dropdown for search */
  .search-cat-wrap { position:relative; }
  .search-cat-menu { position:absolute; top:calc(100% + 6px); left:0; min-width:200px; background:#fff; border:1px solid #e6e6e6; box-shadow:0 10px 30px rgba(0,0,0,0.12); border-radius:10px; padding:6px 0; display:none; z-index:1300; }
  .search-cat-wrap:hover .search-cat-menu,
  .search-cat-menu.open { display:block; }
  .search-cat-menu ul { list-style:none; margin:0; padding:4px 0; }
  .search-cat-menu li { padding:10px 14px; cursor:pointer; font-size:13px; color:#111; transition: background-color 0.15s ease, color 0.15s ease; }
  .search-cat-menu li:hover { background:#e8f1ff; color:#0f3fa4; }
  .search-cat-menu li.selected { background:#e8f1ff; color:#0f3fa4; font-weight:600; }
  .search-cat-button {
    border: 1px solid #d9d9d9;
    padding: 8px 14px;
    border-radius: 28px;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    background: #fff;
    min-width: 150px;
    justify-content: space-between;
  }

  .search-input {
    flex:1;
    max-width:none;
    margin:0;
    border:0;
    background:transparent;
    padding:8px 6px;
    font-size:15px;
    outline:none;
    box-shadow:none !important;
    -webkit-appearance:none;
    appearance:none;
  }
  .search-input:focus { box-shadow:none !important; outline:none; }
  .search-box:focus-within { box-shadow:none !important; }

  .search-btn { background:transparent;border:0;padding:8px 10px;color:var(--color-base-accent-1, #334FB4); cursor:pointer; }

  .custom-header__icons { display:flex; align-items:center; gap:14px; margin-left:auto; }
  .custom-header__icons a { color:var(--color-base-accent-1, #334FB4); display:flex; align-items:center; justify-content:center; }

  /* Bottom nav */
  .custom-header__nav { margin-top:0; }
  .nav-row { display:flex; align-items:center; justify-content:space-between; }
  .nav-list { display:flex; gap:28px; list-style:none; padding:0; margin:0; width:100%; justify-content:center; flex-wrap:wrap; }
  .nav-list li { font-weight:700; white-space:nowrap; }
  .nav-list a { color:#111; text-decoration:none; padding:12px 6px; display:inline-block; }

  .nav-toggle { display:none; background:transparent;border:0;font-size:20px;padding:8px; }

  @media (max-width: 900px) {
    .custom-header__search { flex:1 1 100%; margin-left:0; }
    .search-box { max-width:420px; }
    .nav-list { display:none; }
    .nav-toggle { display:block; }
  }

  /* mobile menu open */
  .nav-open .nav-list { display:flex; flex-direction:column; gap:0; background:#fff; position:absolute; left:0; right:0; top:100%; padding:10px 20px; box-shadow:0 8px 24px rgba(0,0,0,0.08); }

  /* Mega menu */
  .nav-list .has-mega { position:relative; }
  .nav-list .has-mega > a { position:relative; z-index:1201; }
  
  .mega-menu { 
     position:absolute; left:-100px; top:100%; width:1000px; background:#fff; border:1px solid #eee; 
     box-shadow:0 8px 24px rgba(0,0,0,0.12); z-index:1210; 
     transition: opacity 0.3s ease, visibility 0.3s ease; opacity:0; visibility:hidden;
     display:none;
      overflow: visible;
  }
  .has-mega:hover .mega-menu { 
     display:flex; opacity:1; visibility:visible;
  }
    /* keep menu visible when hovering the panel itself (avoid disappearing when moving pointer) */
    .has-mega .mega-menu:hover { display:flex; opacity:1; visibility:visible; }
  
  .mega-inner { display:flex; width:100%; }

  .mega-left { 
     width:180px; border-right:1px solid #eee; padding:12px 0; background:#fafafa;
    display:flex; flex-direction:column; gap:0;
  }
  .mega-cat-btn { 
     background:transparent; border:0; padding:12px 16px; text-align:left; width:100%; 
     font-weight:500; cursor:pointer; color:#666; transition: all 0.2s ease; position:relative;
     border-radius:0; font-size:14px; border-left:3px solid transparent;
  }
  .mega-cat-btn .arrow { display:inline-block; margin-left:8px; opacity:0; transition: opacity 0.2s ease; }
  .mega-cat-btn:hover { background:#f0f0f0; color:#111; }
   .mega-cat-btn.active { 
     background:#fff; color:#111; font-weight:700; border-left:3px solid var(--color-base-accent-1, #334FB4); 
   }
  .mega-cat-btn.active .arrow { opacity:1; }
  
  .mega-right { 
     flex:1; padding:20px 24px; display:flex; gap:40px; flex-wrap:wrap; align-content:flex-start;
     max-height:400px; overflow-y:auto;
  }
  .mega-panel { 
     display:none; gap:40px; flex-wrap:wrap; width:100%;
  }
  .mega-panel.active { 
    display:flex;
  }
  .mega-column { 
     display:flex; flex-direction:column; gap:10px; min-width:140px;
  }
  .mega-column a { 
     display:block; padding:4px 0; color:#333; text-decoration:none; transition: color 0.2s ease, font-weight 0.2s ease;
    font-size:13px;
  }
  .mega-column a:hover { 
     color:var(--color-base-accent-1, #334FB4); font-weight:600;
  }

    /* Trending product column inside mega menus */
    .mega-trending { min-width:260px; }
    .trending-grid { display:flex; flex-direction:column; gap:14px; }
    .trending-item { display:flex; gap:12px; align-items:flex-start; }
    .trending-item img { width:92px; height:92px; object-fit:cover; border-radius:8px; box-shadow:0 2px 8px rgba(0,0,0,0.06); }
    .trending-meta .title { display:block; font-size:13px; font-weight:700; color:#222; }
  .trending-meta .price { display:block; margin-top:6px; color:#111; font-weight:800; }
 
