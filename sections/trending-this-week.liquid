{%- liquid
  assign block_count = section.blocks.size
-%}

<style>
  .ttw {
    padding: {{ section.settings.padding_top | default: 24 }}px 12px {{ section.settings.padding_bottom | default: 24 }}px;
    background: #fff;
  }
  .ttw__inner {
    max-width: 1300px;
    margin: 0 auto;
  }
  .ttw__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
    margin-bottom: 18px;
  }
  .ttw__title {
    margin: 0;
    font-size: 24px;
    font-weight: 800;
    color: #0b2f1b;
  }
  .ttw__link {
    font-size: 14px;
    font-weight: 700;
    color: #0b8c53;
    text-decoration: none;
  }
  .ttw__link:hover { text-decoration: underline; }
  .ttw__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
  }
  .ttw__card {
    display: grid;
    grid-template-columns: 100px 1fr auto;
    align-items: center;
    gap: 12px;
    padding: 14px;
    border: 1px solid #e6e6e6;
    border-radius: 16px;
    background: #fff;
    box-shadow: 0 8px 20px rgba(0,0,0,0.05);
  }
  .ttw__image {
    width: 100px;
    height: 100px;
    border-radius: 14px;
    background: #f3f3f3;
    overflow: hidden;
  }
  .ttw__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 14px;
  }
  .ttw__placeholder {
    width: 100%;
    height: 100%;
    background: #e7e7e7;
  }
  .ttw__content {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }
  .ttw__category {
    font-size: 12px;
    font-weight: 700;
    color: #6a746f;
    text-transform: uppercase;
  }
  .ttw__title-text {
    margin: 0;
    font-size: 15px;
    font-weight: 800;
    color: #0b2f1b;
    line-height: 1.4;
  }
  .ttw__price {
    font-size: 14px;
    font-weight: 700;
    color: #0b2f1b;
  }
  .ttw__icon {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    border: 1px solid #dcdcdc;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: #0b2f1b;
    font-weight: 700;
  }
  @media (max-width: 1024px) {
    .ttw__grid { grid-template-columns: repeat(2, 1fr); }
    .ttw__card { grid-template-columns: 90px 1fr auto; }
    .ttw__image { width: 90px; height: 90px; }
  }
  @media (max-width: 680px) {
    .ttw__grid { grid-template-columns: 1fr; }
    .ttw__card { grid-template-columns: 80px 1fr auto; }
    .ttw__image { width: 80px; height: 80px; }
  }
</style>

<section class="ttw" id="trending-this-week-{{ section.id }}">
  <div class="ttw__inner">
    <div class="ttw__header">
      <h2 class="ttw__title">{{ section.settings.heading }}</h2>
      {%- if section.settings.shop_all_link != blank -%}
        <a class="ttw__link" href="{{ section.settings.shop_all_link }}">{{ section.settings.shop_all_text }}</a>
      {%- endif -%}
    </div>

    <div class="ttw__grid">
      {%- if block_count > 0 -%}
        {%- for block in section.blocks -%}
          <div class="ttw__card" {{ block.shopify_attributes }}>
            {%- if block.settings.link != blank -%}<a href="{{ block.settings.link }}" style="text-decoration:none;color:inherit;display:contents;">{%- endif -%}
            <div class="ttw__image">
              {%- if block.settings.image != blank -%}
                <img src="{{ block.settings.image | image_url: width: 400 }}" alt="{{ block.settings.title | escape }}">
              {%- else -%}
                <div class="ttw__placeholder"></div>
              {%- endif -%}
            </div>
            <div class="ttw__content">
              <span class="ttw__category">{{ block.settings.category | default: 'Category' }}</span>
              <h3 class="ttw__title-text">{{ block.settings.title | default: 'Product title' }}</h3>
              <span class="ttw__price">{{ block.settings.price | default: 'Price' }}</span>
            </div>
            <span class="ttw__icon">&#8594;</span>
            {%- if block.settings.link != blank -%}</a>{%- endif -%}
          </div>
        {%- endfor -%}
      {%- endif -%}

      {%- assign placeholders = 0 -%}
      {%- if block_count < 9 -%}
        {%- assign placeholders = 9 | minus: block_count -%}
        {%- if placeholders < 0 -%}{%- assign placeholders = 0 -%}{%- endif -%}
      {%- endif -%}
      {%- if placeholders > 0 -%}
        {%- for i in (1..placeholders) -%}
          <div class="ttw__card">
            <div class="ttw__image"><div class="ttw__placeholder"></div></div>
            <div class="ttw__content">
              <span class="ttw__category">Category</span>
              <h3 class="ttw__title-text">Product title</h3>
              <span class="ttw__price">Price</span>
            </div>
            <span class="ttw__icon">&#8594;</span>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Trending this week",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Trending This Week" },
    { "type": "text", "id": "shop_all_text", "label": "Shop all label", "default": "Shop Trending Products >" },
    { "type": "url", "id": "shop_all_link", "label": "Shop all link", "default": "/collections/all" },
    { "type": "range", "id": "padding_top", "label": "Padding top", "min": 0, "max": 100, "step": 4, "unit": "px", "default": 24 },
    { "type": "range", "id": "padding_bottom", "label": "Padding bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "default": 24 }
  ],
  "blocks": [
    {
      "type": "trending_item",
      "name": "Trending item",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "category", "label": "Category", "default": "Category" },
        { "type": "text", "id": "title", "label": "Title", "default": "Product title" },
        { "type": "text", "id": "price", "label": "Price", "default": "â‚¹0" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "presets": [
    { "name": "Trending this week" }
  ]
}
{% endschema %}
