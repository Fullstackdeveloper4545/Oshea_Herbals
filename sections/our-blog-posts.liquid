{%- liquid
  assign block_count = section.blocks.size
-%}

<style>
  .obp {
    padding: {{ section.settings.padding_top | default: 24 }}px 12px {{ section.settings.padding_bottom | default: 24 }}px;
    background: #fff;
  }
  .obp__inner {
    max-width: 1300px;
    margin: 0 auto;
  }
  .obp__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
    margin-bottom: 18px;
  }
  .obp__title {
    margin: 0;
    font-size: 24px;
    font-weight: 800;
    color: #0b2f1b;
  }
  .obp__link {
    font-size: 14px;
    font-weight: 700;
    color: #0b8c53;
    text-decoration: none;
  }
  .obp__link:hover { text-decoration: underline; }
  .obp__grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 16px;
  }
  .obp__card {
    background: #fff;
    border: 1px solid #e6e6e6;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 8px 20px rgba(0,0,0,0.05);
    display: flex;
    flex-direction: column;
  }
  .obp__image {
    width: 100%;
    aspect-ratio: 4 / 3;
    background: #f3f3f3;
    overflow: hidden;
  }
  .obp__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    border-radius: 0;
  }
  .obp__placeholder {
    width: 100%;
    height: 100%;
    background: #e7e7e7;
  }
  .obp__content {
    padding: 14px 14px 16px;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }
  .obp__card-title {
    margin: 0;
    font-size: 16px;
    font-weight: 800;
    color: #0b2f1b;
    line-height: 1.35;
  }
  .obp__excerpt {
    margin: 0;
    font-size: 14px;
    color: #4d5b51;
    line-height: 1.5;
  }
  .obp__meta {
    display: flex;
    justify-content: space-between;
    font-size: 12px;
    color: #6a746f;
  }
  .obp__link-wrap { color: inherit; text-decoration: none; }
  @media (max-width: 1024px) {
    .obp__grid { grid-template-columns: repeat(2, 1fr); }
  }
  @media (max-width: 680px) {
    .obp__grid { grid-template-columns: 1fr; }
    .obp__header { flex-direction: column; align-items: flex-start; }
  }
</style>

<section class="obp" id="our-blog-posts-{{ section.id }}">
  <div class="obp__inner">
    <div class="obp__header">
      <h2 class="obp__title">{{ section.settings.heading }}</h2>
      {%- if section.settings.view_all_link != blank -%}
        <a class="obp__link" href="{{ section.settings.view_all_link }}">{{ section.settings.view_all_text }}</a>
      {%- endif -%}
    </div>

    <div class="obp__grid">
      {%- if block_count > 0 -%}
        {%- for block in section.blocks limit: 3 -%}
          <div class="obp__card" {{ block.shopify_attributes }}>
            {%- if block.settings.link != blank -%}<a class="obp__link-wrap" href="{{ block.settings.link }}">{%- endif -%}
            <div class="obp__image">
              {%- if block.settings.image != blank -%}
                <img src="{{ block.settings.image | image_url: width: 800 }}" alt="{{ block.settings.title | escape }}">
              {%- else -%}
                <div class="obp__placeholder"></div>
              {%- endif -%}
            </div>
            <div class="obp__content">
              <h3 class="obp__card-title">{{ block.settings.title | default: 'Blog title' }}</h3>
              <p class="obp__excerpt">{{ block.settings.excerpt | default: 'Blog excerpt goes here.' }}</p>
              <div class="obp__meta">
                <span class="obp__date">{{ block.settings.date | default: 'Date' }}</span>
                <span class="obp__author">{{ block.settings.author | default: 'Author' }}</span>
              </div>
            </div>
            {%- if block.settings.link != blank -%}</a>{%- endif -%}
          </div>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..3) -%}
          <div class="obp__card">
            <div class="obp__image"><div class="obp__placeholder"></div></div>
            <div class="obp__content">
              <h3 class="obp__card-title">Blog title</h3>
              <p class="obp__excerpt">Blog excerpt goes here.</p>
              <div class="obp__meta">
                <span class="obp__date">Date</span>
                <span class="obp__author">Author</span>
              </div>
            </div>
          </div>
        {%- endfor -%}
      {%- endif -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Our blog posts",
  "settings": [
    { "type": "text", "id": "heading", "label": "Heading", "default": "Our Blog Posts" },
    { "type": "text", "id": "view_all_text", "label": "View all label", "default": "View All Posts >" },
    { "type": "url", "id": "view_all_link", "label": "View all link", "default": "/" },
    { "type": "range", "id": "padding_top", "label": "Padding top", "min": 0, "max": 100, "step": 4, "unit": "px", "default": 24 },
    { "type": "range", "id": "padding_bottom", "label": "Padding bottom", "min": 0, "max": 100, "step": 4, "unit": "px", "default": 24 }
  ],
  "blocks": [
    {
      "type": "blog_post",
      "name": "Blog post",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "title", "label": "Title", "default": "Blog title" },
        { "type": "textarea", "id": "excerpt", "label": "Excerpt", "default": "Blog excerpt goes here." },
        { "type": "text", "id": "date", "label": "Date", "default": "Jan 1, 2025" },
        { "type": "text", "id": "author", "label": "Author", "default": "Author name" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "presets": [
    { "name": "Our blog posts" }
  ],
  "max_blocks": 3
}
{% endschema %}
